@model Insurance.DAL.Models.ViewModels.UserInsurance.UserInsuranceVm
@{
    ViewBag.Title = "Add";
}
<style>


</style>
@using (Html.BeginForm(Html.BeginForm("Create", "UserInsurance", FormMethod.Post)))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>فرم درخواست </h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
            <div class="">
                @Html.TextBoxFor(model => model.Name , new { @class= "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FundValue, new { @class = "control-label" })
            <div class="">
                @Html.TextBoxFor(model => model.FundValue, new { @class= "form-control" })
                @Html.ValidationMessageFor(model => model.FundValue)
            </div>
        </div>
        <div class="form-group">
            @{ 
                foreach (var item in Model.ListInsuranceType)
                {
                    <div class="item">
                        <input type="checkbox" name="ListInsuranceTypeSelectedId" value="@item.Id" />
                        <label>@item.Name</label>
                    </div>
                }
            }
        </div>
        <div class="form-group">
            <div class="">
                <input type="submit" value="افزودن" class="btn btn-primary mey-btn" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
